{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "types": ["node", "web3"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@0xproject/typescript-typings/types"
    ],
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "paths": {
      "stream": ["./node_modules/stream-browserify/index.js"],
      "vm": ["./node_modules/vm-browserify/index.js"],
      "crypto": ["./node_modules/crypto-browserify/index.js"],
      "@muzika/core": ["projects/core/index.ts"]
    }
  },
  "files": [
    "./main.ts"
  ],
  "exclude": [
    "dist",
    "app-builds",
    "node_modules"
  ]
}

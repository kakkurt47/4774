{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "commonjs",
    "types": ["node", "web3"],
    "typeRoots": [
      "../../node_modules/@types",
      "../../node_modules/@0xproject/typescript-typings/types"
    ],
    "paths": {
      "@muzika/core": ["./public_api.ts"]
    },
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ]
  },
  "files": [
    "./public_api.ts",
    "./nodejs/public_api.ts"
  ],
  "exclude": [
    "dist",
    "app-builds",
    "node_modules"
  ]
}
